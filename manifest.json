{
  "name": "利尻島昆布干場予報システム",
  "short_name": "利尻昆布予報",
  "description": "利尻島の昆布漁師のための天気予報・海霧予測・漁期管理統合システム",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "scope": "/",
  
  "icons": [
    {
      "src": "/static/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "/static/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "ホーム画面 - デスクトップ"
    },
    {
      "src": "/static/screenshots/mobile-home.png",
      "sizes": "360x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "ホーム画面 - モバイル"
    }
  ],
  
  "categories": ["weather", "productivity", "utilities"],
  "lang": "ja",
  
  "shortcuts": [
    {
      "name": "天気予報",
      "short_name": "天気",
      "description": "現在の天気予報を確認",
      "url": "/?shortcut=weather",
      "icons": [
        {
          "src": "/static/icons/weather-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "海霧予測",
      "short_name": "海霧",
      "description": "海霧予測情報を確認",
      "url": "/?shortcut=fog",
      "icons": [
        {
          "src": "/static/icons/fog-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "ダッシュボード",
      "short_name": "監視",
      "description": "統合ダッシュボードを開く",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/static/icons/dashboard-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+rishiri",
      "url": "/?handler=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "weather_data",
          "accept": ["text/csv", "application/json"]
        }
      ]
    }
  },
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://github.com/famosoyuhei/rishiri-kelp-forecast-system"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}